---
const { brandName, navBar } = Astro.props;

type NavItem = {
  id: string;
  label: {
    es: string;
    en: string;
  };
  path: string;
};
---

<nav class="fixed top-6 left-1/2 z-50 w-[90%] max-w-5xl -translate-x-1/2">
  <div
    class="flex items-center justify-between rounded-full border border-white/5 bg-zinc-900/80 px-8 py-4 text-white shadow-2xl backdrop-blur-md dark:rounded-2xl"
  >
    <button
      id="logo-button"
      class="text-md flex cursor-pointer items-center font-mono font-bold tracking-tighter text-white"
    >
      &lt; {brandName} /&gt;
    </button>
    <div
      class="hidden items-center gap-4 text-[10px] font-bold tracking-[0.2em] text-white uppercase md:flex lg:gap-6 dark:text-zinc-500"
    >
      {
        navBar.map((item: NavItem) => (
          <a
            class="hover:text-accent-cyan transition-colors dark:hover:text-white"
            href={item.path}
          >
            {item.label['en']}
          </a>
        ))
      }
    </div>
    <div class="flex items-center gap-4 transition-all duration-1000">
      <button
        class="hidden cursor-pointer rounded-full p-2 text-zinc-400 transition-colors hover:bg-white/5 hover:text-white dark:block"
        onclick="document.documentElement.classList.toggle('dark')"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="icon icon-tabler icons-tabler-filled icon-tabler-brightness-up"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M12 8a4 4 0 1 1 -3.995 4.2l-.005 -.2l.005 -.2a4 4 0 0 1 3.995 -3.8z"
          ></path><path
            d="M12 2a1 1 0 0 1 .993 .883l.007 .117v2a1 1 0 0 1 -1.993 .117l-.007 -.117v-2a1 1 0 0 1 1 -1z"
          ></path><path
            d="M17.693 4.893a1 1 0 0 1 1.497 1.32l-.083 .094l-1.4 1.4a1 1 0 0 1 -1.497 -1.32l.083 -.094l1.4 -1.4z"
          ></path><path
            d="M21 11a1 1 0 0 1 .117 1.993l-.117 .007h-2a1 1 0 0 1 -.117 -1.993l.117 -.007h2z"
          ></path><path
            d="M16.293 16.293a1 1 0 0 1 1.32 -.083l.094 .083l1.4 1.4a1 1 0 0 1 -1.32 1.497l-.094 -.083l-1.4 -1.4a1 1 0 0 1 0 -1.414z"
          ></path><path
            d="M12 18a1 1 0 0 1 .993 .883l.007 .117v2a1 1 0 0 1 -1.993 .117l-.007 -.117v-2a1 1 0 0 1 1 -1z"
          ></path><path
            d="M6.293 16.293a1 1 0 0 1 1.497 1.32l-.083 .094l-1.4 1.4a1 1 0 0 1 -1.497 -1.32l.083 -.094l1.4 -1.4z"
          ></path><path
            d="M6 11a1 1 0 0 1 .117 1.993l-.117 .007h-2a1 1 0 0 1 -.117 -1.993l.117 -.007h2z"
          ></path><path
            d="M4.893 4.893a1 1 0 0 1 1.32 -.083l.094 .083l1.4 1.4a1 1 0 0 1 -1.32 1.497l-.094 -.083l-1.4 -1.4a1 1 0 0 1 0 -1.414z"
          ></path>
        </svg>
      </button>
      <button
        class="cursor-pointer rounded-full p-2 text-zinc-400 transition-colors hover:bg-white/5 hover:text-white dark:hidden"
        onclick="document.documentElement.classList.toggle('dark')"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-leaf"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M5 21c.5 -4.5 2.5 -8 7 -10"></path><path
            d="M9 18c6.218 0 10.5 -3.288 11 -12v-2h-4.014c-9 0 -11.986 4 -12 9c0 1 0 3 2 5h3l.014 0"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</nav>
